*
  padding 0px
  margin 0px
  border 0px

body
  font-size 18px
  font-family sans-serif
  background-color #eee

#app
  display flex
  justify-content center
  align-items center
  position fixed
  top 0px
  left 0px
  height 100vh
  width 100vw
  .site
    max-width 800px
    width 100%
    max-height 650px
    height 100%
    display flex
    justify-content space-around
    flex-wrap nowrap
    .Output
      width 100%
      max-height 100%
      min-height 100%
      height 100%
      border-radius 8px
      background-color #3a322f
      box-shadow 0px 10px 40px -10px rgba(0,0,0,0.4)
      overflow hidden
      .cmdOutBlock
        height 100%
        overflow-y scroll
        color white
        .header
          padding 15px
          font-size 20px
          font-weight bold
          border-bottom 1px solid #848484
        .lines
          padding 8px
          font-family monospace
          font-size 15px
          .loading
            display flex
            .dot
              height 10px
              width 10px
              margin 5px 2px
              border-radius 100%
              background-color gray
              transition background-color .2s
            .dot.show
              background-color #ccc
    .Commands
      width 300px
      padding 0px 20px
      .command
        cursor pointer
        background-color white
        border-radius 8px
        padding 5px 10px
        margin-bottom 17px
        font-size 17px
        box-shadow 0px 5px 21px -10px rgba(0,0,0,0.2)
        border 3px solid white
        &.completed
          border-color #77c177
        &.running
          border-color #55bbe6
        &.error
          border-color #d25757
